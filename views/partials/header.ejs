<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- CUSTOM CSS -->
    <link rel="stylesheet" href="/styles.css">
    <!-- FONTAWESOME -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Ubuntu:wght@400;700&display=swap" rel="stylesheet">
    <link rel="shortcut icon" href="/assets/favicon.ico" type="image/x-icon">
    <title>
        <%= title %>
    </title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light px-4 py-3">
      <div class="container-fluid">
          <div id="message" class="hide">
            <div class="d-flex align-items-center pt-3">
              <i class="fas fa-exclamation-circle"></i>
              <span id="messageBox"></span>
            </div>
            <div class="bar"></div>
          </div>
          <a class="navbar-brand" href="/">
            <img src="/assets/logo.png" alt="Logo" class="logo"/>
          </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent" >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 container-fluid d-flex justify-content-center" id="linkSection">
                <% categories.forEach(cat=>{%>
                  <%- include('./navlink.ejs', {cat, category: category})%>
                <%})%>
            </ul>
          </div>
          <div class="d-flex align-items-center">
            <span id="cartQty"></span>
            <i class="fas fa-shopping-basket cartIcon" id="cart"></i>
          </div>
          <div id="cartSection" class="cartList hide d-flex flex-column align-items-center p-3">
            <i class="fas fa-times-circle align-self-start" id="close"></i>
            <h3>Carrito</h3>
            <div id="productList"></div>
            <div class="d-flex">
              <button class="clearButton" id="clearButton">Vaciar</button>
              <button class="finishButton" id="finishButton">Finalizar</button>
            </div>
          </div>
        </div>
    </nav>
    <div class="container-fluid searcherSection py-3">
      <form action="/search-products" method="GET" class="container-fluid d-flex justify-content-center">
          <input class="me-4 searchInput" type="text" name="search" id="search" placeholder="Buscar productos...">
          <input class="searchButton" type="submit" value="Buscar">
      </form>
    </div>